{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "Add new episode to collection",
  "description": "Add a collection episode to watch history",
  "default": {},
  "examples": [
    {
      "api_id": "123",
      "api_episode_id": "456",
      "api_name": "tvmaze"
    }
  ],
  "additionalProperties": false,
  "properties": {
    "api_id": {
      "$id": "#/properties/api_name",
      "type": "string",
      "title": "Item API ID",
      "description": "The item ID from the third party API"
    },
    "api_episode_id": {
      "$id": "#/properties/episode_id",
      "type": "string",
      "title": "Episode ID",
      "description": "ID of the item episode to add"
    },
    "api_name": {
      "$id": "#/properties/api_name",
      "type": "string",
      "title": "Item API name",
      "description": "The name of the third party API to use for this item post"
    },
    "rating": {
      "$id": "#/properties/rating",
      "type": "integer",
      "title": "Rating",
      "description": "Rate the episode 1-10",
      "minimum": 1,
      "maximum": 10
    },
    "overview": {
      "$id": "#/properties/overview",
      "type": "string",
      "title": "Overview",
      "description": "Own overview for the episode",
      "maxLength": 5000
    },
    "review": {
      "$id": "#/properties/review",
      "type": "string",
      "title": "Review",
      "description": "Review for the episode",
      "maxLength": 80000
    },
    "dates_watched": {
      "$id": "#/properties/name",
      "type": "array",
      "title": "Watch date(s)",
      "description": "One or more dates this episode was watched",
      "items": {
        "type": "string",
        "format": "date-time",
        "minLength": 5
      }
    }
  },
  "required": [
    "api_name",
    "api_id",
    "episode_id"
  ]
}